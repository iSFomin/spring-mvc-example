        <!--<user name="qwerty" password="qwerty" authorities="ROLE_USER" />-->
      <!--</user-service>-->
    <!--</authentication-provider>-->

    <authentication-provider user-service-ref="userService">
      <password-encoder ref="passEncoder" />
    </authentication-provider>
  </authentication-manager>

